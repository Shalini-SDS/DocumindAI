{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "jsx": "react-jsx",

    "types": ["vite/client"],

    "skipLibCheck": true
  },
  "include": ["src"]
}
